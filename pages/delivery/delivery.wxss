page {
  background: white;
}
.header {
  display: flex;
  align-items: center;
  padding: 15px;
  box-sizing: border-box;
}
.header__right {
  flex-grow: 1;
  padding-left: 10px;
  box-sizing: border-box;
}
.delivery {
  margin-left: 20px;
}
.delivery__item {
  display: flex;
  margin-bottom: 10px;
}
.middle {
  position:relative;
  margin:0 15px;
}
.middle-line {
  width: 1px;
  height: 100%;
  background: lightgrey;
  position: absolute;
  left: 50%;
  z-index: -1;
}
