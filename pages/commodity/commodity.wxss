page {
  background: #f5f5f5;
}
.container {
  padding: 20px;
}
.option {
  margin-bottom: 15px;
}
.option__header {
  margin-bottom: 5px;
  font-size: 14px;
}
.option__main text {
  padding: 5px 15px;
  border-radius: 5px;
  border: 1px solid lightgrey;
  margin: 0 5px 5px 0;
  font-size: 12px;
}
.option__main .active {
  border-color: #7a3ce9;
  background: #7a3ce9;
  color: white;
}

.action {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 -1px 2px lightgrey;
  background: white;
}
.button {
  padding: 15px 25px;
  color: white;
  font-size: 14px;
}
.modal-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.4);
}
.modal {
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

/** 数量选择器 **/
.count {
  display: flex;  
  border: 1px solid lightgrey;
  border-radius: 2px;
  height: 30px;
  line-height: 30px;
}
.count__action {
  width: 30px;
  text-align: center;
  font-size: 14px;
}
.count__input {
  width: 50px;
  text-align: center;
  border-left: 1px solid lightgrey;
  border-right: 1px solid lightgrey;
  font-size: 14px;
}
