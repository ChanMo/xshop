<view>
  <scroll-view style="margin-bottom:50px;">
    <!-- 轮播图 -->
    <swiper 
      autoplay="true"
      circular="true"
      indicator-active-color="#ff7b03"
      indicator-dots="true"
      style="height:{{100/1080*673}}vw">
      <block wx:for="{{commodity.detail.images}}">
        <swiper-item>
          <image src="{{item.file_path}}" 
            style="width:100vw;height:{{100/1080*673}}vw" />
        </swiper-item>
      </block>
    </swiper>

    <view class="container section" style="padding:20px 10px;">
      <view><text class="text">{{commodity.detail.goods_name}}</text></view>
      <view>
        <text class="price" style="font-size:10px;">￥</text>
        <text class="price" style="font-size:18px;font-weight:bold;">{{spec.goods_price}}</text>
        <text class="text-grey float-right" style="font-size:14px;">快递:10.00</text>
      </view>
    </view>

    <!-- 规格 -->
    <view class="section" wx:if="{{commodity.specData}}">
      <view class="option" wx:for="{{commodity.specData.spec_attr}}">
        <view class="option__header">{{item.group_name}}</view>
        <view class="option__main">
          <block wx:for="{{item.spec_items}}" wx:for-item="item2" 
            wx:for-index="index2">
            <text wx:if="{{spec_ids[index] == item2.item_id}}"
              class="active">{{item2.spec_value}}</text>
            <text wx:else data-id="{{item2.item_id}}" data-group="{{index}}"
              bindtap="setSpec">{{item2.spec_value}}</text>
          </block>
        </view>
      </view>
    </view>

    <!-- 商品详情 -->
    <view class="section">
      <view style="margin-bottom:10px;"><text class="text-primary">商品详情</text></view>
      <rich-text style="overflow:hidden;"
        nodes="{{commodity.detail.content}}"></rich-text>
    </view>

  </scroll-view>
  <view class="action" wx:if="{{is_virtual == 0}}">
    <navigator
      hover-class="none"
      open-type="switchTab"
      url="/pages/cart/cart"
      style="flex-grow:1;padding:0 15px;display:flex;align-items:center;">
      <image 
        style="width:24px;height:24px;"
        src="../../images/购物车2.png" />
      <text style="margin-left:8px;font-size:14px;color:#3a3a3a">购物车</text>
    </navigator>
    <view
      bindtap="addToCart"
      class="button border-primary text-primary"
      style="background-color:#ffebee;border:1px solid transparent">加入购物车</view>
    <view
      bindtap="buy"
      class="button bg-primary border-primary"
      style="border:1px solid transparent">立即购买</view>
  </view>

  <!-- 虚拟商品操作区 -->
  <view wx:else class="action bg-primary text-white" 
    style="justify-content:center;padding:10px 0;" bindtap="buy">立即购买</view>
</view>

<!-- modal -->
<view wx:if="{{modalVisible}}" class="modal-bg" bindtap="closeModal"></view>
<view wx:if="{{modalVisible}}" class="modal">
  <view style="padding:20px;box-sizing:border-box;">
    <view style="display:flex;align-items:center;">
      <image 
        src="https://img.alicdn.com/bao/uploaded/TB1lO6XJpXXXXc_XFXXLhc5_XXX_054423.jpg_160x160.jpg"
        style="width:120px;height:120px;" />
      <view style="padding-left:10px;box-sizing:border-box">
        <view style="font-size:14px;">面膜三部曲10片</view>
        <view class="price">120.00</view>
      </view>
    </view>
    <view>
      <view class="option">
        <view class="option__header">规格</view>
        <view class="option__main">
          <text class="active">50ml</text>
          <text>100ml</text>
          <text>150ml</text>
        </view>
      </view>
      <view class="option">
        <view class="option__header">颜色</view>
        <view class="option__main">
          <text class="active">红色</text>
          <text>蓝色</text>
        </view>
      </view>
    </view>
    <view style="display:flex;align-items:center;justify-content:space-between">
      <text style="font-size:14px;">数量</text>
      <view class="count">
        <view class="count__action">-</view>
        <view class="count__input">1</view>
        <view class="count__action">+</view>
      </view>
    </view>
  </view>
  <view style="display:flex;">
    <view bindtap="addToCart"
      style="text-align:center;width:100%;padding:15px;font-size:12px;color:white;background-color:#fe6487">加入购物车</view>
    <view bindtap="buy"
      style="text-align:center;width:100%;padding:15px;font-size:12px;color:white;background-color:#02baf2">立即购买</view>
  </view>
</view>
