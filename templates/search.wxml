<template name="search">
  <form style="display:block;padding:10px 15px;box-sizing:border-box;">
    <input name="search" bindconfirm="onSearch"
      placeholder='输入关键字进行搜索' 
      placeholder-style="color:rgba(255,255,255,0.65)"
      class="border-primary"
      value="{{value}}"
      style="border-width:2px;border-radius:15px;padding:2px 10px;" />
  </form>
</template>
